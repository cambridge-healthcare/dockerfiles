FROM howareyou/precise
MAINTAINER How are you? "docker@howareyou.com"

RUN apt-get install build-essential
ADD http://download.redis.io/releases/redis-2.6.16.tar.gz /usr/local/src/redis-2.6.16.tar.gz
RUN cd /usr/local/src && tar -zxvf redis-2.6.16.tar.gz
RUN cd /usr/local/src/redis-2.6.16 && make && make install
RUN sysctl vm.overcommit_memory=1

CMD redis-server

EXPOSE 6379
